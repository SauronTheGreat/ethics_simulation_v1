<table width="85%" style="margin: auto">
<tr>
  <td><h1>Clients</h1></td>
  <td><h1>Type</h1></td>

  <td width="10%"></td>

</tr>
<% @clients.each do |client| %>
  <tr>
    <td style="text-align: left;border: solid 1px #000000"><%= client.name.titleize %></td>
	<td style="text-align: left;border: solid 1px #000000"><%= client.type_of_client.titleize %></td>

    <td width="10%"></td>
    <td class="blacky"><%= link_to image_tag('/images/menu/settings_icon_off.png', :style=>"width:50px;height:50px;",:class=>'rollover', :title=>'Manage'), client %></td>
    <td class="blacky"><%= link_to image_tag('/images/menu/rename_icon_off.png', :style=>"width:40px;height:40px;",:class=>'rollover', :title=>'Rename'), edit_client_path(client) %></td>
    <td class="blacky"><%= link_to image_tag('/images/menu/delete-icon_off.png', :style=>"width:45px;height:45px;",:class=>'rollover', :title=>'Delete'), client, :confirm => 'Are you sure?', :method => :delete %></td>

  </tr>
<% end %>
</table>












