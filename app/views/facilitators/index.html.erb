<h1>Listing facilitators</h1>



<table width="85%" style="margin: auto">
<tr>
  <td><h1>Users</h1></td>
  <td width="10%"></td>

</tr>
<% @facilitators.each do |facilitator| %>
  <tr>
    <td style="text-align: left;border: solid 1px #000000"><%= User.find(facilitator.user_id).full_name.titleize %></td>
    <td width="10%"></td>
    <td class="blacky"><%= link_to image_tag('/images/menu/settings_icon_off.png', :style=>"width:50px;height:50px;",:class=>'rollover', :title=>'Manage'), facilitator %></td>
    <td class="blacky"><%= link_to image_tag('/images/menu/rename_icon_off.png', :style=>"width:40px;height:40px;",:class=>'rollover', :title=>'Rename'), edit_facilitator_path(facilitator) %></td>
    <td class="blacky"><%= link_to image_tag('/images/menu/delete-icon_off.png', :style=>"width:45px;height:45px;",:class=>'rollover', :title=>'Delete'), facilitator, :confirm => 'Are you sure?', :method => :delete %></td>

  </tr>
<% end %>
</table>







