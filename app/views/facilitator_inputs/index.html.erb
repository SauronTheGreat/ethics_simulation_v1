
<h1>Listing facilitator Inputs</h1>
<table width="85%" style="margin: auto">
<tr>
  <td><h1>Location </h1></td>
  <td><h1>Body </h1></td>

  <td width="10%"></td>

</tr>
<% @facilitator_inputs.each do |facilitator_input| %>
  <tr>
    <td style="text-align: left;border: solid 1px #000000"><%= facilitator_input.location.titleize %></td>
	<td style="text-align: left;border: solid 1px #000000"><%= facilitator_input.body.titleize %></td>

    <td width="10%"></td>
    <td class="blacky"><%= link_to image_tag('/images/menu/settings_icon_off.png', :style=>"width:50px;height:50px;",:class=>'rollover', :title=>'Manage'), facilitator_input %></td>
    <td class="blacky"><%= link_to image_tag('/images/menu/rename_icon_off.png', :style=>"width:40px;height:40px;",:class=>'rollover', :title=>'Rename'), edit_facilitator_input_path(facilitator_input) %></td>
    <td class="blacky"><%= link_to image_tag('/images/menu/delete-icon_off.png', :style=>"width:45px;height:45px;",:class=>'rollover', :title=>'Delete'), facilitator_input, :confirm => 'Are you sure?', :method => :delete %></td>

  </tr>
<% end %>
</table>







