<% if @facilitator_groups.count==0 %>
  <h2>No Facilitator Groups created !!</h2>
  <%= link_to 'Add new Facilitator Group', :controller => :facilitator_groups, :action => 'new', :cid=>params[:cid] %>
<% else %>

  <table width="85%" style="margin: auto">
	<tr>
	  <td>Client</td>
	  <td>Name</td>
	  <td>Facilitator Name</td>

	  <td width="10%"></td>

	</tr>
	  <% flag=0 %>
	<% @facilitator_groups.each do |facilitator_group| %>
	  <tr>
		<td style="text-align: left;border: solid 1px #000000"><%= Client.find(facilitator_group.client_id).name %></td>
		<td style="text-align: left;border: solid 1px #000000"><%= facilitator_group.name.titleize %></td>
		<td style="text-align: left;border: solid 1px #000000"><%= facilitator_group.facilitator_id %></td>


		<td width="10%"></td>
		<td class="blacky"><%= link_to image_tag('/images/menu/settings_icon_off.png', :style=>"width:50px;height:50px;", :class=>'rollover', :title=>'Manage'), facilitator_group %></td>
		<td class="blacky"><%= link_to image_tag('/images/menu/rename_icon_off.png', :style=>"width:40px;height:40px;", :class=>'rollover', :title=>'Rename'), edit_facilitator_group_path(facilitator_group) %></td>
		<td class="blacky"><%= link_to image_tag('/images/menu/delete-icon_off.png', :style=>"width:45px;height:45px;", :class=>'rollover', :title=>'Delete'), facilitator_group, :confirm => 'Are you sure?', :method => :delete %></td>

	  </tr>
	<% end %>
  </table>

<% end %>






